							"placeholderColor": "#CCC",
							"disabled": false
						},
						"buttons": [
							// 右边
							{
								"color": "#FFFFFF",
								"colorPressed": "#BBB",
								"float": "right",
								"fontSize": "16px",
								"text": "取消"
							}
						]
					}
				}
			}
		},
		{
			"path": "pages/friend-chat/friend-chat",
			"style": {
				"navigationBarTitleText": "聊天页",
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"color": "#FFFFFF",
							"colorPressed": "#BBB",
							"float": "right",
							"fontSize": "22px",
							"fontSrc": "/static/font/iconfont.ttf",
