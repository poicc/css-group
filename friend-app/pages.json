			"style": {
				"enablePullDownRefresh": false,
				"app-plus": {
					"titleNView": {
						"searchInput": {
							"align": "center",
							"backgroundColor": "#F5F4F2",
							"borderRadius": "4px",
							"placeholder": "搜索帖子",
							"placeholderColor": "#6F6C67"
